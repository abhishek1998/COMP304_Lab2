<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetachedHome">


    <TextView
        android:id="@+id/ApartmentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40sp"
        android:gravity="center_horizontal"
        android:text="Detached Home"
        android:textAlignment="center"
        android:textSize="44sp"
        app:layout_constraintBottom_toTopOf="@+id/apartment_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/apartment_1"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle_checkbox"
        android:text="@string/brampton_towers_1650"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/apartment_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/apartment_2"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle_checkbox"
        android:text="@string/_440_remembrance_road_brampton_2800"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/apartment_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/apartment_3"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle_checkbox"
        android:text="@string/_8_silver_maple_court_1800"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/apartment_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/apartment_4"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle_checkbox"
        android:text="@string/_14_germain_circle_2600"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/apartment_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/apartment_5"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle_checkbox"
        android:text="@string/lytton_park_1600"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/apartment_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/apartment_6"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="536dp"
        android:layout_marginRight="20sp"
        android:background="@drawable/rectangle_checkbox"
        android:text="@string/the_peanut_toronto_1850"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goto_paymentportal"
        android:layout_width="361dp"
        android:layout_height="52dp"
        android:background="#F9A825"
        android:onClick="enter_PaymentScreen"
        android:text="@string/payment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apartment_6"
        app:layout_constraintVertical_bias="0.507" />

</androidx.constraintlayout.widget.ConstraintLayout>